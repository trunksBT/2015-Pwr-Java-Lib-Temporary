package bt.core.algorithms;

public class CopySequences {
	public static int amountOfZeroOnBegin(int[] seq) {
		if( seq!= null) {
			int lastIdx = seq.length -1;
			int i = lastIdx;
			int acc = 0;
			
			while(i-->0)
				acc = seq[i] != 0 ? 0 : acc+1;
			
			return acc;
		}else
			throw new NullPointerException();
	}
	
	public static boolean isNotAscending(int[] seq) {
		if( seq != null) {
			int i = -1;
			int lastGoodIdx = seq.length -2;
			boolean pred = true;
			
			while( pred && ++i <= lastGoodIdx )
				if(seq[i] >= seq[i+1])
					pred&= true;
				else
					pred&= false;
			
			return pred;
		}else
			throw new NullPointerException();
	}
}
