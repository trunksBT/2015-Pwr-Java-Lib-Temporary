package bt.collections.lists;

public class RatajList {
	RatajElem root;
	
	public RatajList(RatajElem head) {
		this.root = head;
	}

	public RatajList() {
		this(null);
	}

	public static void print(RatajElem hd) {
		while(hd != null) {
			System.out.println( hd.val );
			hd = hd.next;
		}
	}
	
	public int maxVal() {
		int max = root.val;
		RatajElem l = root.next;
		
		while( l!= null ) {
			if( l.val > max )
				max = l.val;
			l = l.next;
		}
		
		return max;
	}

	public void add(int val) {
		RatajElem newElem = new RatajElem(val);
		
		if( root == null )
			root = newElem;
		else {
			RatajElem hd = root;
			
			while( hd.next != null )
				hd = hd.next;
			
			hd.next = newElem;
		}
	}
	
	//
//	public void add(int val) {
