		Integer ageSum = persons
			    .parallelStream()
			    .reduce(0,
			        (sum, p) -> {
			            System.out.format("accumulator: sum=%s; person=%s\n", sum, p);
			            return sum += p.age;
			        },
			        (sum1, sum2) -> {
			            System.out.format("combiner: sum1=%s; sum2=%s\n", sum1, sum2);
			            return sum1 + sum2;
			        });
	      
//	      //act
//	      double reachedVal = retVal.get().value;
	      double expectedVal = 0.0;
	      
	      //assert
	      assertEquals(1,1);
	}
	  
