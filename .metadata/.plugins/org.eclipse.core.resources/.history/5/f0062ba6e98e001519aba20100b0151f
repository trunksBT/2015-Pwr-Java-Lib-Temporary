package Bt.Core.Collections;
import java.util.*;

public class Tab {
	
	int []tab;
	int n;
	
	Tab(int aSize)
	{
		n = aSize;
		tab = new int[n];
	}
	
	Tab(int aSize,int []in)
	{
		n = aSize;
		tab = in;
	}
		
	void wczytaj()
	{
		Scanner scanner = new Scanner(System.in);
		n = 0;
		
		while(scanner.hasNextInt())
		{
			tab[n++]=scanner.nextInt();
		}
	}
	
	void usunPowt()
	{
		for(int i = 0 ;i<n;i++)
		{
			int temp = tab[i];
			
			for (int j = i+1; j < n; j++) {	
				if(tab[i] == tab[j])
				{				
					int startPlace = j;
					
					for(int l = startPlace;l<n-1;l++)
					{
						tab[l] = tab[++startPlace];
					}
					
					--n;
				}
			}
		}
	}
	
	void druk()
	{
		System.out.println("Tablica");
		
		for (int i = 0; i < n; i++) {
			System.out.print(tab[i]);
		}
		
		System.out.println();
		System.out.println("Koniec");
	}
}
