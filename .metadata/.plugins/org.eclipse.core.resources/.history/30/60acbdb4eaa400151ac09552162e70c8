package Bt.Core.Geometry.Elements.ToPrint;

import Bt.Core.Geometry.Complex.LineSegment;
import Bt.Core.Geometry.Elementaries.Point;

public class LineSegmentPrinter {

	LineSegment _buff;
	
	public LineSegmentPrinter(LineSegment aPoint) {
		_buff = aPoint;
	}
	
	@Override
    public String toString()
    {		
        return String.format("( %-#5.1f,%-#5.1f)",_buff.GetX(),_buff.GetY());
    }
}
