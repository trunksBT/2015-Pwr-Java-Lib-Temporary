package Bt.Core.Collections;
import java.util.*;

public class Tab {
	
	int []tab;
	int n;
	
	Tab(int aSize)
	{
		n = aSize;
		tab = new int[n];
	}
	
	Tab(int aSize,int []in)
	{
		n = aSize;
		tab = in;
	}
		
	void wczytaj()
	{
		Scanner scanner = new Scanner(System.in);
		n = 0;
		
		while(scanner.hasNextInt())
		{
			tab[n++]=scanner.nextInt();
		}
	}
	
	void usunPowt()
	{
		for(int i = 0 ;i<n;i++)
		{
			int temp = tab[i];
			
			int []tempTab;
			int wrongPlaceIdx = -1;
			
			for (int j = i+1; j < n; j++) {	
				if(temp == tab[j]) // szukam
				{
					wrongPlaceIdx = j;
				}
				
				if(wrongPlaceIdx != -1)// znalazlem
				{
					tempTab = new int[n-1];
					
					for(int k = 0 ;k<wrongPlaceIdx;k++)
					{
						tempTab[k]=tab[k];
					}
					
					int startPlace = wrongPlaceIdx;
					
					for(int l = startPlace;l<n-1;l++)
					{
						tempTab[l] = tab[++startPlace];
					}
					
					// przepisanie , zerowanie , zmienianie rozmiaru
					--n;			
					tab = tempTab;				
					wrongPlaceIdx = -1;
				}
			}		
		}
	}
	
	void druk()
	{
		System.out.println("Tablica");
		
		for (int i = 0; i < n; i++) {
			System.out.print(tab[i]);
		}
		
		System.out.println();
		System.out.println("Koniec");
	}
}
