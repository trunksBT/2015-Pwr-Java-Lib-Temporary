package bt.core.algorithms.graph;

import bt.core.collections.graphs.AdjacentList;
import bt.core.collections.interfaces.List;
import bt.core.collections.lists.LinkedList;
import bt.core.collections.lists.ListDecorator;

public class DFS<W> {
	public List forAdjacentList(AdjacentList<W> inTape) {
		inTape.resetVerticesStory();
		LinkedList retVal = new LinkedList();
		int currVert = 0;
		innerAdjList(currVert, inTape, retVal);
		return retVal;
	}
	
	private void innerAdjList(int currVert, AdjacentList<W> inTape, List outTape) {
		ListDecorator temp = inTape.getAdjacents(currVert);
		temp.setDirty(true);
		outTape.add(currVert);
		
	}
}
