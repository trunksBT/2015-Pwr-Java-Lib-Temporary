package bt.tests.core.algorithms;

public class StringsCopy {
	public static boolean parenthesisOK(String chain) {
		int licz = 0;
		int i = 0;
		int lastIdx = chain.length() -1;
		
		while(licz>=0 && i< lastIdx) {
			if(chain.charAt(i)=='(')
				++licz;
			else if(chain.charAt(i)== ')')
				--licz;
			i++;
		}
		
		return licz == 0;
	}
}
