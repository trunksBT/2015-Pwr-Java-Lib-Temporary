	}

	public Object size() {
		// TODO Auto-generated method stub
		return null;
	}

	public RatajElem2 getElem(int searchedVal) {
		// TODO Auto-generated method stub
		return null;
	}

	public void attachAfter(RatajElem2 yetAdded0, int toAdd0) {
		// TODO Auto-generated method stub
		
	}

	public void delete(int toDel) {
		// TODO Auto-generated method stub
		
	}

}
