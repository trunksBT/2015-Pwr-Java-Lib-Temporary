package bt.core.collections.dataTypes;

public class RatajListRec2 {
	private RatajListRec2 next;
	private int val;
	
	public RatajListRec2(int val) {
		this.val = val;
	}

	public RatajListRec2(int val, RatajListRec2 next) {
		this.val = val;
		this.next = next;
	}

	public int size() {
		RatajListRec2 refToNode = next;
		return ( refToNode == null) ? 1 : 1 + refToNode.size();
	}

	public static int sum(RatajListRec2 tape) {
		return ( tape == null ) ? 0 : tape.val + RatajListRec2.sum(tape.next);
	}

	public void add(int newVal) {
		RatajListRec2 refToNode = next;
		if( next == null ) 
			next = new RatajListRec2(newVal);
		else
			refToNode.add(newVal);
	}

	public int sum() {
		RatajListRec2 refToNode = next;
		return ( refToNode == null ) ? val : val + refToNode.sum();
	}

	public RatajListRec2 getElem(int searchedVal) {
		RatajListRec2 refToNode = next;
		return ( val == searchedVal ) ? this : refToNode.getElem(searchedVal);
	}

	public int getVal() {
		return val;
	}

	public RatajListRec2 delete(int toDel) {
		RatajListRec2 retNode ;
		if( val == toDel )
			return null;
		else if( next == null )
			retNode = new RatajListRec2(val);
		else if( next.val == toDel )
			retNode = new RatajListRec2(val);
		else 
			retNode = new RatajListRec2(val, delete( toDel ));
		return retNode;
	}
}
