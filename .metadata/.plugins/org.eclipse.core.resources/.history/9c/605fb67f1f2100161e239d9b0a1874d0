//			return this;
//		}
//	}
//	
//	public static int sum(RatajListRec list1) {
//		return list1 == null ? 0 : list1.val + RatajListRec.sum(list1.tail);
//	}
//
//	public int sum() {
//		return tail == null ? val : val + tail.sum();
//	}
	
	public int size() {
		return next == null ? 1 : 1 + next.size();
	}

	public static int sum(RatajListRec list) {
		if( list == null )
			return 0;
		else
			return list.next == null ? list.val : list.val + sum(list.next);
	}

	public void add(int val) {
		if( next == null )
			next = new RatajListRec(val);		
		else
			next.add(val);
	}

	public int sum() {
		return next == null ? val : val + next.sum();
	}

	public RatajListRec getElem(int searchedVal) {
		return val == searchedVal ? this : next.getElem(searchedVal);
	}

	public RatajListRec delete(int toDel) {
		if( (val == toDel || val != toDel )&& next == null )
			return null;
		else if ( val == toDel && next != null )
			return next;
		else
			return new RatajListRec(val, next.delete(toDel));
	}
	
	public int getVal() {
		return val;
	}
	
