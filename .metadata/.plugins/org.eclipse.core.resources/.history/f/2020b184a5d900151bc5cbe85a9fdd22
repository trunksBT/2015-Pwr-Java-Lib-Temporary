package bt.core.collections.iterators;

public class ArrayPeriodIterator extends ArrayIterator implements Iterator{
	final int period;
	
	public ArrayPeriodIterator(Object[] array,int period) {
		super(array);
		this.period = period;
	}
	
	public ArrayPeriodIterator(ArrayIterator[] array, int period) {
		super(array);
		this.period = period;
	}

	@Override
	public void previous() {
		// TODO Auto-generated method stub
	}

	@Override
	public void next() {
		for(int i = 0 ;i< period ;i++)
			super.next();
	}

	@Override
	public Object current() {
		return super.current();
	}

	@Override
	public void first() {
		super.first();
	}

	@Override
	public void last() {
		super.last();
		rewindIfWrong();
	}

	@Override
	public boolean isDone() {
		return false;
	}
	
	private void rewindIfWrong() {
		if(super.current % period != 0)
			super.previous();
	}
}
