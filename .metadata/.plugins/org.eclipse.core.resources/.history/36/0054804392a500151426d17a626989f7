package Bt.Core.Geometry.Elements.ToPrint;

import Bt.Core.Geometry.Elementaries.Point;

public class PointPrinter {

	Point _buff;
	
	public PointPrinter(Point aPoint) {
		_buff = aPoint;
	}
	
	@Override
    public String toString()
    {		
        return String.format("( %-#4.1f,%-#4.1f)",_buff.GetX(),_buff.GetY());
    }
}
