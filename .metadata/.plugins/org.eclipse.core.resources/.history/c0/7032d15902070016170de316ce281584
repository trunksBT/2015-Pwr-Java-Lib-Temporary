package bt.core.collections.dataTypes.trees;

public class RatBST {
	// countInternalNodes
	public static int countIN(RatNode root) {
		return root == null ? 0 : 1 + countIN(root.left) +
				countIN(root.right);
	}
	
	public static int countEN(RatNode tape) {
		// TODO Auto-generated method stub
		return 0;
	}
	
	

