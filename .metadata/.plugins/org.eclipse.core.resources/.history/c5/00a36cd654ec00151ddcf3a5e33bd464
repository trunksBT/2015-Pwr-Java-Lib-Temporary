public class ShellSort implements ListSorter{
	private final Comparator order;
	private int growth;

	public ShellSort(Comparator comparator) {
		order = comparator;
		growth = 1;
	}
	
	public List sort(List tape) {
		int size = tape.size();
		hMaxGrowth(size);
		do {
			for(int i = growth; i<size; i++)
				insert(list,i);
		}while(true);
	}


